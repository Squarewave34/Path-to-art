<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Welcome to important projects</h1>

  <% projects.forEach((project)=>{ %>
    <% if(project.important && project.status!="waiting"){%>

      <div class="flex">
        <div class="card flex">
          <a href="/<%= project.status %>Projects/project/<%= project._id %>"><%= project.name %></a>
        </div>
      </div>

    <br>
    <% } %>

    <% if(project.important && project.status==="waiting"){%>
      <div class="flex">
        <div class="card flex">
          <a href="/waitingProjects/show/<%= project.folderId %>/project/<%= project._id %>"><%= project.name %></a>
        </div>
      </div>

    <br>
    <% } %>
  <% }) %>

</body>
</html>